{
    "compilerOptions": {
        "extendedDiagnostics": true,
        "strict": true,
        "target": "ES2020",
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": "src",
        "isolatedModules": true,
        "isolatedDeclarations": true
    },
    "include": ["src"],
    "exclude": []
}
